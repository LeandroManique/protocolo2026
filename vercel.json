{
  "env": {
    "NODE_OPTIONS": "--no-deprecation"
  },
  "redirects": [
    {
      "source": "/:path*",
      "has": [
        { "type": "host", "value": "ojogodoalgoritmo.com" }
      ],
      "destination": "https://www.ojogodoalgoritmo.com/:path*",
      "permanent": true
    }
  ],
  "rewrites": [
    { "source": "/news", "destination": "/" },
    { "source": "/news/:path*", "destination": "/" }
  ],
  "crons": [
    { "path": "/api/health", "schedule": "0 */12 * * *" }
  ]
}
